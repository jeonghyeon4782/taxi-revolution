<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="30dp">


        <!--   아이디  레이아웃 추가-->
        <RelativeLayout
            android:id="@+id/layout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/txt_myinformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인정보 수정"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:fontFamily="@font/welcome"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_myinformation"
                android:layout_marginTop="30dp"
                android:text="아이디"
                android:textColor="@color/black"
                android:fontFamily="@font/welcome"
                android:textSize="13dp" />
            <TextView
                android:id="@+id/et_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/txt_id"
                android:fontFamily="@font/welcome"
                android:textStyle="bold"
                android:textSize="13dp"
                android:textColor="@color/black"/>
        </RelativeLayout>

        <!--닉네임 레이아웃 추가-->
        <RelativeLayout
            android:id="@+id/layout_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_id"
            android:layout_marginTop="35dp"
            >

            <TextView
                android:id="@+id/txt_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별"
                android:fontFamily="@font/welcome"
                android:textColor="@color/black"
                android:textSize="13dp" />
            <TextView
                android:id="@+id/et_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_gender"
                android:fontFamily="@font/welcome"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textSize="13dp"
                android:textColor="@color/black"/>
        </RelativeLayout>

        <!--    레이아웃 닉네임 -->
        <RelativeLayout
            android:id="@+id/layout_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_gender"
            android:layout_marginTop="35dp"
            >


            <TextView
                android:id="@+id/txt_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textColor="@color/black"
                android:fontFamily="@font/welcome"
                android:textSize="13dp" />
            <EditText
                android:id="@+id/et_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_nickname"
                android:layout_marginTop="5dp"
                android:padding="11dp"
                android:fontFamily="@font/welcome"
                android:textStyle="bold"
                android:background="@drawable/room"
                android:textSize="13dp"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_nicknameUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_nickname"
                android:layout_marginTop="7dp"
                android:layout_marginRight="2dp"
                android:layout_alignParentRight="true"
                android:background="#00ff0000"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:textColor="@color/letter"
                android:fontFamily="@font/welcome"
                android:padding="10dp"
                android:text="수정" />
        </RelativeLayout>

        <!--    레이아웃 닉네임 -->
        <RelativeLayout
            android:id="@+id/layout_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_nickname"
            android:layout_marginTop="35dp"
            >


            <TextView
                android:id="@+id/txt_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textColor="@color/black"
                android:fontFamily="@font/welcome"
                android:textSize="13dp" />
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_pw"
                android:layout_marginTop="5dp"
                android:padding="11dp"
                android:fontFamily="@font/welcome"
                android:textStyle="bold"
                android:background="@drawable/room"
                android:textSize="13dp"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_passwordUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_pw"
                android:layout_marginTop="7dp"
                android:layout_marginRight="2dp"
                android:layout_alignParentRight="true"
                android:background="#00ff0000"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:textColor="@color/letter"
                android:fontFamily="@font/welcome"
                android:padding="10dp"
                android:text="수정" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_management"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_pw"
            android:layout_marginTop="50dp"
            >

            <TextView
                android:id="@+id/txt_management"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계정 관리"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_management"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:text="로그아웃"
                android:fontFamily="@font/welcome"

                android:textColor="@color/letter"
                android:background="@drawable/room"
                />
            <Button
                android:id="@+id/btn_deleteMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_logout"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:text="회원탈퇴"
                android:fontFamily="@font/welcome"
                android:textColor="@color/letter"
                android:background="@drawable/room"
                />


        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>