<?xml version="1.0" encoding="utf-8"?>
<!-- item_record.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/line"
    android:layout_marginTop="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginLeft="12dp"
    android:padding="25dp">

    <!--승차시간 레이아웃-->

    <RelativeLayout
        android:id="@+id/layout_boardingTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_inputBoardingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="승차시간"
            android:textColor="@color/gray"
            android:fontFamily="@font/welcome"
            android:textSize="15dp"
            android:layout_marginTop="7dp" />



        <!--        승차시간 입력-->
        <TextView
            android:id="@+id/boardingTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp"
            android:textColor="@color/black"
            android:text="승차시간입력"
            android:fontFamily="@font/welcome"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/txt_inputBoardingTime"/>
    </RelativeLayout>



    <!--승차위치 레이아웃-->
    <RelativeLayout
        android:id="@+id/layout_boardingLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_boardingTime">
        <TextView
            android:id="@+id/txt_inputBoardingLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="승차위치"
            android:textColor="@color/gray"
            android:fontFamily="@font/welcome"
            android:textSize="15dp"
            android:layout_marginTop="7dp" />


        <!--        승차위치 입력-->
        <TextView
            android:id="@+id/boardingLocationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp"
            android:textColor="@color/black"
            android:text="승차위치입력"
            android:fontFamily="@font/welcome"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/txt_inputBoardingLocation"/>

    </RelativeLayout>



    <!--    하차시간 레이아웃-->
    <RelativeLayout
        android:id="@+id/layout_alightingTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_boardingLocation">
        <TextView
            android:id="@+id/txt_inputAlighttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하차시간"
            android:textColor="@color/gray"
            android:fontFamily="@font/welcome"
            android:textSize="15dp"
            android:layout_marginTop="7dp" />


        <!--        하차시간 입력-->
        <TextView
            android:id="@+id/alightingTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp"
            android:textColor="@color/black"
            android:text="하차시간입력"
            android:fontFamily="@font/welcome"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/txt_inputAlighttime"/>
    </RelativeLayout>



    <!--    하차위치 레이아웃-->
    <RelativeLayout
        android:id="@+id/layout_alightingLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_alightingTime">
        <TextView
            android:id="@+id/txt_inputAlightingLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하차위치"
            android:textColor="@color/gray"
            android:fontFamily="@font/welcome"
            android:textSize="15dp"
            android:layout_marginTop="7dp" />


        <!--        하차위치 입력-->
        <TextView
            android:id="@+id/alightingLocationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp"
            android:textColor="@color/black"
            android:text="하차위치입력"
            android:fontFamily="@font/welcome"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/txt_inputAlightingLocation"/>
    </RelativeLayout>


    <!--차량번호 레이아웃-->
    <RelativeLayout
        android:id="@+id/layout_vehicleNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_alightingLocation">
        <TextView
            android:id="@+id/txt_vehicleNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="차량번호"
            android:textSize="15dp"
            android:fontFamily="@font/welcome"
            android:textColor="@color/gray"
            android:layout_marginTop="7dp" />


        <!--        차랑번호 입력-->
        <TextView
            android:id="@+id/vehicleNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp"
            android:textColor="@color/black"
            android:text="차량번호입력"
            android:fontFamily="@font/welcome"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/txt_vehicleNumber"/>
    </RelativeLayout>


    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:background="#00ff0000"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:textColor="@color/letter"
        android:src="@drawable/baseline_delete_24"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>

    <!-- 다른 Record 정보를 표시할 뷰들을 추가하세요 -->

</RelativeLayout>